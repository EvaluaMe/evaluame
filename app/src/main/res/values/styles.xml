<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/green_app</item>
        <item name="colorPrimaryDark">@color/green_app_dark</item>
        <item name="colorAccent">@color/green_app_pressed</item>

        <!--<item name="alertDialogTheme">@style/AppTheme.AlertDialog</item>-->
        <!--<item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>-->
        <!--<item name="android:actionBarTabBarStyle">@style/AppTheme.ActionBar.TabBar</item>-->
        <!--<item name="circleButtonStyle">@style/AppTheme.CircleButton</item>-->
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="subject_name_font" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="ToolbarExpandedTitle">
        <item name="android:textSize">48sp</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
