<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <NumberPicker
            android:id="@+id/number_picker_dialog_integer"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"/>

        <NumberPicker
            android:id="@+id/number_picker_dialog_tenths"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"/>

        <NumberPicker
            android:id="@+id/number_picker_dialog_hundredths"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"/>
    </GridLayout>

    <Button
        android:id="@+id/button_set_number_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/number_picker_dialog_hundredths"
        android:layout_gravity="bottom"
        style="?android:attr/buttonBarButtonStyle"/>
</LinearLayout>