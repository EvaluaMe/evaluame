<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <it.gmariotti.cardslib.library.view.CardListView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card="http://schemas.android.com/apk/res-auto"
        android:id="@+id/subject_card_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        card:list_card_layout_resourceID="@layout/list_card_layout"
        style="@style/list_card.thumbnail"/>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/floating_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        app:fab_type="normal"
        app:fab_colorNormal="@color/green_app"
        app:fab_colorPressed="@color/green_app_pressed"
        android:src="@drawable/ic_action_new"/>

    <!-- Include undo message layout -->
    <include layout="@layout/list_card_undo_message"/>

</FrameLayout>
